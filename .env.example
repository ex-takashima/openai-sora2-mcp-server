# OpenAI Sora 2 MCP Server Configuration

# Required: OpenAI API Key (must be Tier 2+ for Sora access)
OPENAI_API_KEY=sk-...

# Optional: Enable debug logging
DEBUG=false

# Optional: Default output directory for generated videos
OUTPUT_DIR=./output

# Optional: Polling interval in milliseconds (default: 15000)
VIDEO_POLL_INTERVAL=15000

# Optional: Maximum polling attempts (default: 120)
VIDEO_MAX_POLL_ATTEMPTS=120
